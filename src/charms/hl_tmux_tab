#!/usr/bin/env zsh
set -o errexit
set -o pipefail

if [[ -z "$TMUX" ]]; then
  print "This script must be run inside tmux"
  exit 1
fi

zparseopts -D -E -F -- \
  -clear=clear \
  -id:=winId \
  || return 1

local rename=$1

local targetWin
if [[ -n "$winId" ]]
  then targetWin="-t ${winId[2]}"
  else targetWin=""
fi

local action=`[[ -n "$clear" ]] && print "clear" || print "alert"`

if [[ -n "$clear" ]]
  then tmux set automatic-rename
fi

if [[ -n "$rename" && -z "$clear" ]]
  then tmux rename-window "$rename"
fi

tmux ${action}1 $targetWin \; ${action}2 $targetWin
